<nav class="navbar navbar-dark bg-dark">
  <div class="container">
    <a class="navbar-brand" href="/">
      <h1>Greatest Way</h1>
    </a>
    <form action="/user/google" method="post">
      <button class="btn btn-danger btn-block" type="submit"><i class="fab fa-google"></i> Login with Google</button>
    </form>
  </div>
</nav>

<div class="container-fluid" id="map-full-hd">
  <div id="map"></div>
  <div class="container-fluid text-center">
    <img class="shadow-img" src="images/shadow.png">
  </div>
</div>

<div class="container" id="orig-and-dest-form">

  <div class="main-form">
    <input type="text" class="form-control" id="origin" placeholder="Origin"
      value="{{#if originLat}}{{originAddress}}{{/if}}">
    <input type="text" class="form-control" id="destination" placeholder="Destination"
      value="{{#if originLat}}{{destinationAddress}}{{/if}}">
    <button type="button" class="btn btn-danger" id="submit">Search</button>
  </div>

</div>

<div class="container" id="card-container-info">
  <div class="card-wrapper">
    {{#each trips as |trip| }}
    <div class="card col-2" id="{{trip.kind}}">
      <h3>{{trip.kind}}</h3>
      <p>{{trip.distance}} km</p>
      <p>{{trip.duration}} min</p>
    </div>
    {{/each}}
  </div>
</div>

