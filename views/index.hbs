<h1>Discover what's the best way between two points in Madrid</h1>

<div class="row my-4">
  <div class="form col-5 m-auto bg-info">
    <div class="form-group">
      <label for="origin"> Origin</label>
      <input type="text" class="form-control" id="origin" size="50" placeholder="Calle Mayor, Madrid"
        value="{{#if originLat}}{{originAddress}}{{/if}}">
    </div>
    <div class="form-group">
      <label for="destination">Destination</label>
      <input type="text" class="form-control" id="destination" size="50" placeholder="Puerta del Sol, Madrid"
        value="{{#if originLat}}{{destinationAddress}}{{/if}}">
    </div>
    <div class="form-group">
      <button type="button" class="btn btn-danger" id="submit">Search</button>
    </div>
  </div>
  <div class="col-6" id="main-map">
    <div id="map"></div>
  </div>
</div>

<div class="container row">
  {{#each trips as |trip| }}
    <div class="card col-3" id="{{trip.kind}}">
      <h3>{{trip.kind}}</h3>
      <p>{{trip.distance}} km</p>
      <p>{{trip.duration}} min</p>
    </div>
  {{/each}}
</div>


