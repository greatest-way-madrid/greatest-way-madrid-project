<div class="row mb-2">
  <form action="/user/google" method="post" class="col-4 mx-auto">
    <button class="btn btn-danger btn-block" type="submit"><i class="fab fa-google"></i> Login with Google</button>
  </form>
</div>

<div class="form col-6 m-auto">
  <div class="form-group">
    <label for="origin">Origin</label>
    <input type="textbox" class="form-control" id="origin" placeholder="Calle Mayor, Madrid" value="Calle Andres Mellado 112, Madrid">
  </div>
  <div class="form-group">
    <label for="destination">Destination</label>
    <input type="textbox" class="form-control" id="destination" placeholder="Puerta del Sol, Madrid" value="Calle Arenal 58, Madrid">
  </div>
  <button type="button" class="btn btn-primary" id="submit">Submit</button>
</div>

<div class="container col-9" id="main-map">
  <h3>Map</h3>
  <div id="map"></div>
</div>

<div class="row my-4">
{{#if originDriving}}
<div class="card bg-light col-5 m-auto" id="transit">

  <div class="card-header m-auto">
    <h2>Driving Route</h2>
  </div>

  <div class="card-body">
    <p>Origin: {{ originDriving }}</p>
    <p>Destination: {{ destinationDriving }}</p>
    <p>Distance: {{ distanceDriving }} </p>
    <p>Duration: {{ durationDriving }} </p>
  </div>
</div>
{{/if}}

{{#if originTransit}}
<div class="card bg-light col-5 m-auto" id="transit">

  <div class="card-header m-auto">
    <h2>Transit Route</h2>
  </div>

  <div class="card-body">
    <p>Origin: {{ originTransit }}</p>
    <p>Destination: {{ destinationTransit }}</p>
    <p>Distance: {{ distanceTransit }} </p>
    <p>Duration: {{ durationTransit }} </p>
  </div>
</div>
{{/if}}
</div>

