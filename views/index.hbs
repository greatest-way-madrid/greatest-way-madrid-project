<nav class="navbar">
  <div class="container">
    <a class="navbar-brand" href="/">
      <h1>Greatest Way</h1>
    </a>
    <form action="/user/google" method="post">
      <button class="btn btn-danger btn-block" type="submit"><i class="fab fa-google"></i> Login</button>
    </form>
  </div>
</nav>


<div {{#if originLat}}hidden{{/if}} class="background">
  <div class="container main-container">
    <div class="main-title">
      <h2>The Greatest Way to move between two locations</h2>
      <h4>Find the fastest, shortest or healthiest route</h4>
    </div>
    <div class="main-form">
      <input type="text" class="form-control mx-2" id="origin" placeholder="Origin"
        value="{{#if originLat}}{{originAddress}}{{/if}}">
      <input type="text" class="form-control mx-2" id="destination" placeholder="Destination"
        value="{{#if originLat}}{{destinationAddress}}{{/if}}">
      <button type="button" class="btn btn-danger mx-2" id="submit">Go</button>
    </div>
  </div>
</div>


<div {{#if originLat}}{{else}}hidden{{/if}} class="container-fluid main-info" id="map-full-hd">
  <div class="row">
    <div class="card-wrapper">
      <h3 class="choose">Choose your way</h3>
    </div>
    <div id="map"></div>
  </div>
  {{#if originLat}}
  <div class="container" id="kind-buttons">
    <button type="button" class="btn btn-danger mx-2" id="fastest">Fastest</button>
    <button type="button" class="btn btn-danger mx-2" id="shortest">Shortest</button>
    <button type="button" class="btn btn-danger mx-2" id="healthy">Healthiest</button>
  </div>
  {{/if}}
</div>


